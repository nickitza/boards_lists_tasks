<h1 class ="header"><%= @boards.length > 0 ? "All Boards" : "You don't have any boards."%>
  <%if @boards.length == 0%></h1>
<h4>Click "Add New Board" to get started on your journey of productivity!</h4>
    <% else %>
  <hr>
  <div class = "ui cards">
<% @boards.each do |board| %>
  <div class="ui card">
    <div class="content">
          <h1 class="header"><%= board.title %></h1>
    </div>
    <div class="extra content">
      <%= link_to "View Board", board_lists_path(board), class:"ui tiny button green inverted" %>
      <%= link_to "Edit Board", edit_board_path(board), class:"ui tiny button secondary inverted" %>
    </div>
  </div>
    <% end %>
  </div>
    <% end %>
